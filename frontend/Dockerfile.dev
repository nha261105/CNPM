FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Change ownership
RUN chown -R node:node /app

USER node

EXPOSE 3000

CMD ["npm", "run", "start"]
