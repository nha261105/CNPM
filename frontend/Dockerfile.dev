
FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Kiểm tra source code sau khi copy
RUN echo "[DEBUG] Kiểm tra source code trong container..." \
	&& ls -la /app \
	&& if [ ! -f /app/package.json ]; then \
		echo "[ERROR] Không tìm thấy /app/package.json. Có thể mount volume sai hoặc thiếu source code!"; \
		exit 1; \
	fi

# Build the application
RUN npm run build

# Change ownership
RUN chown -R node:node /app

USER node

EXPOSE 3000

CMD ["npm", "run", "start"]
