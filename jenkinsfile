        // }

        stage('Checkout') {
            steps {
                checkout scm
                echo "Branch: ${env.BRANCH_NAME ?: 'main'} | Build: ${env.BUILD_NUMBER} | ${env.BUILD_DATE}"
            }
        }

        stage('Build & Test') {
            parallel {
                stage('Backend') {
                    steps {
                        dir('backend') {
                            sh '''
                                # Optimized npm install with parallel processing
                                npm ci --cache $NPM_CONFIG_CACHE --prefer-offline --no-audit --no-fund
                                npm run build
                            '''
                            script {
                                try {
                                    sh 'npm test'
                                } catch (Exception e) {
                                    echo "‚ö†Ô∏è Backend tests failed or not configured: ${e.getMessage()}"
                                }
                            }
                        }
                    }
                }
                stage('Frontend') {
                    steps {
                        dir('frontend') {
                            sh '''
                                echo "== [DEBUG] Before clean workspace =="
                                ls -la
                                echo "== [DEBUG] Remove .next, node_modules =="
                                rm -rf .next node_modules
                                npm cache clean --force
                                echo "== [DEBUG] After clean workspace =="
                                ls -la
                                echo "== [DEBUG] Node.js version =="
                                node -v
                                echo "== [DEBUG] Next.js version =="
                                npx next --version || npm list next || echo "Next.js not found"
                                echo "== [DEBUG] npm version =="
                                npm -v
                                echo "== [DEBUG] npm ci =="
                                npm ci --cache $NPM_CONFIG_CACHE --prefer-offline --no-audit --no-fund
                                echo "== [DEBUG] npm run build (NODE_ENV=production) =="
                                NODE_ENV=production npm run build
                            '''
                        }
                    }
                }
            }
        }

    // stage('Code Quality Check') {
