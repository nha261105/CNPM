pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Branch: ${env.BRANCH_NAME ?: 'main'} | Build: ${env.BUILD_NUMBER} | ${env.BUILD_DATE}"
            }
        }
        
        stage('Build & Test') {
            parallel {
                stage('Backend') {
                    steps {
                        dir('backend') {
                            echo 'C√†i ƒë·∫∑t dependencies backend...'
                            sh 'npm ci --cache $NPM_CONFIG_CACHE --prefer-offline --no-audit --no-fund || npm install'
                            
                            echo 'üîç Ki·ªÉm tra lint backend...'
                            script {
                                def lintStatus = sh(script: 'npm run lint', returnStatus: true)
                                if (lintStatus != 0) {
                                    error("‚ùå Backend lint failed! Vui l√≤ng s·ª≠a c√°c l·ªói lint tr∆∞·ªõc khi ti·∫øp t·ª•c.")
                                }
                            }
                            
                            echo 'üß™ Ch·∫°y tests backend...'
                            script {
                                def testStatus = sh(script: 'npm run test', returnStatus: true)
                                if (testStatus != 0) {
                                    error("‚ùå Backend tests failed! Vui l√≤ng ki·ªÉm tra l·∫°i tests.")
                                }
                            }
                        }
                    }
                }
                stage('Frontend') {
                    steps {
                        dir('frontend') {
                            echo 'C√†i ƒë·∫∑t dependencies frontend...'
                            sh 'npm ci --cache $NPM_CONFIG_CACHE --prefer-offline --no-audit --no-fund || npm install'
                            
                            echo 'üîç Ki·ªÉm tra lint frontend...'
                            script {
                                def lintStatus = sh(script: 'npm run lint', returnStatus: true)
                                if (lintStatus != 0) {
                                    error("‚ùå Frontend lint failed! Vui l√≤ng s·ª≠a c√°c l·ªói lint tr∆∞·ªõc khi ti·∫øp t·ª•c.")
                                }
                            }
                            
                            echo 'üß™ Ch·∫°y tests frontend...'
                            script {
                                def testStatus = sh(script: 'npm run test', returnStatus: true)
                                if (testStatus != 0) {
                                    error("‚ùå Frontend tests failed! Vui l√≤ng ki·ªÉm tra l·∫°i tests.")
                                }
                            }
                        }
                    }
                }
            }
        }

